# Polyglot Environment Variables
# Copy this file to .env and fill in your actual values

# HuggingFace API Token (required for speaker diarization)
# Get yours at: https://huggingface.co/settings/tokens
# Accept terms at: https://huggingface.co/pyannote/speaker-diarization-3.1
HF_TOKEN=your_huggingface_token_here

# Speaker Diarization Toggle
# Set to False to disable speaker identification (improves performance)
# Set to True to enable speaker identification (default: True)
ENABLE_DIARIZATION=True

# Add any other secrets or API keys here
